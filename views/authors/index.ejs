<h2>
   Search authors
</h2>
  
  <form action="/authors" method="GET">
     <label for="">Name</label>
     <input type="text" name="name" value="<%= search %>">
     <button type="submit">Search</button>
  </form>

   <% authors.forEach(function(author) { %>
    
    
    <div>
        <strong><%= author.name %></strong>
    </div>     
        
    <% }) %> 
